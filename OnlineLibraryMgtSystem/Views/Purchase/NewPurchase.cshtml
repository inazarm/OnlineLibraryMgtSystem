@model IEnumerable<DataAccessLayer.PurTemDetailsTable>

@{
    ViewBag.Title = "New Purchase";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
@using (Html.BeginForm("AddItem", "Purchase", FormMethod.Post,null))
{
    @Html.AntiForgeryToken()
    <div>
        <h4>Enter Book Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-control">
            <label class="control-label col-md-2">Select Book</label>
            <div class="col-md-6">
                <select class="form-control" id="BID" name="BID" required></select>
            </div>
        </div>
        <div class="form-control">
            <label class="control-label col-md-2">Quantity</label>
            <div class="col-md-6">
                <input type="number" class="form-control" id="Qty" name="Qty" placeholder="Enter Purchase Quantity..." required />
            </div>
        </div>
        <div class="form-control">
            <label class="control-label col-md-2">Unit Price</label>
            <div class="col-md-6">
                <input type="number" class="form-control" step=".01" id="Price" name="Price" placeholder="Enter Unit Price..." required /><select class="form-control" id="PID" name="PID" required></select>
            </div>
        </div>
        <div class="form-control">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Item" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<hr />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Purchase Items List</h6>
            <h3 class="text-danger">@ViewBag.Message</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Book
                            </th>
                            <th>
                                Purchase
                            </th>
                            <th>
                                Unit Price
                            </th>
                            <th>Action</th>
                        </tr>
                        </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookTable.BookName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Qty)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitPrice)
                                </td>

                                <td>
                                    @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.PurTemID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("GetProduct", "Purchase")',
            type: 'GET',
            data: '{}',
            success: function (response) {
                for (var i = 0; i < response.data.length; i++) {
                    $('#BID').append("<option value=" + response.data[i].ProductID + ">" + response.data[i].Name + "</option>");
                }
            },
            error: function () {

            }

        });
    });
    </script>
